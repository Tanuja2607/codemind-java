import java.util.Scanner;
class AreaofTrapezoid
{
   public static void main(String args[])
   {
    Scanner sc=new Scanner(System.in);
    float a,b,h,area;
    a=sc.nextFloat();
    b=sc.nextFloat();
    h=sc.nextFloat();
    area=(float)((0.5)*(a+b)*h);
    System.out.println("Area of Trapezoid= "+area);
    sc.close(); 
   }
}
